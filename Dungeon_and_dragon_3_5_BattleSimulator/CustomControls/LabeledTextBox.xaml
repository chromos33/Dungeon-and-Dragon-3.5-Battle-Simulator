<UserControl x:Class="Dungeon_and_Dragon_3_5_BattleSimulator.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_and_Dragon_3_5_BattleSimulator"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel Margin="0,0,0,0">
        <Label Content="{Binding Path=Label}" Margin="10,5,9,0" Height="12"/>
        <TextBox Margin="10,5,10,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Path=Input}"/>
    </StackPanel>
</UserControl>
